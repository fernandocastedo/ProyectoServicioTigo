<UserControl x:Class="ProyectoServicioTigo.Vistas.CarouselView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoServicioTigo.Vistas"
             mc:Ignorable="d" 
             Height="200" Width="Auto">
    <Grid>

        <Image x:Name="ImageDisplay"
           Stretch="UniformToFill"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch"
           Margin="0" />
        <Button Content="&#x276E;"  
            Width="40" Height="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="10,0,0,0"
                Background="#88000000"
                Foreground="White"
                FontSize="24"
                Click="PrevImage_Click"/>
        <Button Content="&#x276F;"  
                Width="40" Height="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Background="#88000000"
                Foreground="White"
                FontSize="24"
                Click="NextImage_Click"/>

    </Grid>
</UserControl>
