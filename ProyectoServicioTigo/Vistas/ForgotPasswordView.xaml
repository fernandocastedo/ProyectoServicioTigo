<UserControl x:Class="ProyectoServicioTigo.Vistas.ForgotPasswordView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="Auto" Width="Auto">
    <Grid>
        <!-- Fondo azul -->
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/fondoAzul.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Contenedor del formulario -->
        <Border Background="White"
    CornerRadius="20"
    Padding="20"
    Width="300"
    VerticalAlignment="Center"
    HorizontalAlignment="Center"
    Opacity="0.95">

            <StackPanel>

                <!-- Logo -->
                <Image Source="/Imagenes/tigoLogo.png"
           Width="100"
           Height="100"
           HorizontalAlignment="Center"
           Margin="0,0,0,10"/>

                <!-- Texto de bienvenida -->
                <TextBlock Text="Soporte 24/7"
               FontSize="16"
               FontWeight="Bold"
               Foreground="#000000"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

                <!-- Texto de contacto -->
                <TextBlock Text="Llamanos al 800-141414"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#000000"
                HorizontalAlignment="Center"
                Margin="0,0,0,10"/>

                <!-- Subtitulo de sucursales -->
                <TextBlock Text="Visitanos en tu sucursal más cercana:"
                FontSize="12"
                Foreground="#000000"
                HorizontalAlignment="Center"
                Margin="0,0,0,10"/>

                <TextBlock FontSize="12"
                Foreground="#000000"
                HorizontalAlignment="Center"
                TextAlignment="Center"
                Margin="0,0,0,10"
                Width="242">
                <Run Text="Cine Center" FontWeight="Bold"/>
                <LineBreak/>
                <Run Text="Av. El Trompillo, 2do Anillo"/>
                </TextBlock>

                <TextBlock FontSize="12"
                Foreground="#000000"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    Margin="0,0,0,10"
                    Width="242">
                    <Run Text="Las Brisas" FontWeight="Bold"/>
                    <LineBreak/>
                   <Run Text="Av. Banzer, 4to Anillo"/>
                </TextBlock>

                <TextBlock FontSize="12"
                    Foreground="#000000"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    Margin="0,0,0,10"
                    Width="242">
                    <Run Text="Montero" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run Text="Calle Isaias Melgarejo"/>
                </TextBlock>

                <TextBlock FontSize="12"
                    Foreground="#000000"
                    HorizontalAlignment="Center"
                    TextAlignment="Center"
                    Margin="0,0,0,10"
                    Width="242">
                    <Run Text="Patio Design" FontWeight="Bold"/>
                    <LineBreak/>
                    <Run Text="Av. Busch, 2do Anillo"/>
                </TextBlock>

                <!-- Botón de inicio de sesión -->
                <Button Content="🡠 Atras"
                Width="239"
                Margin="10"
                Padding="8"
                Click="OnBackClick"
                Cursor="Hand"
                Background="#0078D7"
                Foreground="White"
                FontWeight="SemiBold"
                FontSize="14"
                BorderThickness="0"
                BorderBrush="Transparent"
                HorizontalAlignment="Center">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" Opacity="0.4" ShadowDepth="2"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
