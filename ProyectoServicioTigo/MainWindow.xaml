<Window x:Class="ProyectoServicioTigo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vistas="clr-namespace:ProyectoServicioTigo.Vistas"   
        mc:Ignorable="d"
        Title="Tigo Start" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <DockPanel LastChildFill="True">
        <!-- HEADER (barra azul) -->
        <vistas:HeaderView x:Name="headerView" DockPanel.Dock="Top"/>

        <!-- CARRUSEL -->
        <vistas:CarouselView DockPanel.Dock="Top" Margin="0"/>

        <!-- CONTENIDO PRINCIPAL -->
        <ContentControl x:Name="MainContent" />
    </DockPanel>
</Window>